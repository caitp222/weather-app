<div class="container">
  <div class="container-fluid">
    <h1>Welcome to the Weather Comparison Site</h1><br>
  </div>

  <div class="row">
    <div class="col"
    </div>
    <div class="col">
      <form id="pick-city-form" method="post" action="/cities">
        <p>Ready to torture yourself with far-away weather and semi-relevant gifs?</p>
        <input class="form-control" list="cities" type="text" name="city" placeholder="City Name">
          <datalist id="cities">
            <% @places.each do |place| %>
              <option value="<%=place.name%>"></option>
            <% end %>
          </datalist>
        <input class="form-control" type="submit" value="Compare Weather">
      </form><br><br><br>
    </div>
    <div class="col"
    </div>
  </div>

  <div class="row">
    <div class="col-6">
      <p>You are in <%=@current_location%>, where the weather is described as <%=weather_description(@current_location)%>.</p>
      <p>The max temp is <%=max_temperature(@current_location)%>°C</p>
      <p>The min temp is <%=min_temperature(@current_location)%>°C</p>
      <img id="main" src="<%=get_gif(giphy_weather_description(@current_location))%>">
    </div>

<% if false %>
    <div class="col-6">
      <div class="row">
        <form id="pick-city-form" method="post" action="/cities" class="col-12">
          <p>Wondering what the weather's like elsewhere?</p>
          <input class="form-control" list="cities" type="text" name="city" placeholder="City Name">
            <datalist id="cities">
              <% @places.each do |place| %>
                <option value="<%=place.name%>"></option>
              <% end %>
            </datalist>
          <input class="form-control" type="submit" value="Compare Weather">
        </form>
      </div>
<% end %>

      <div class="row">
        <div id="requested-city-info" class="col-12">
          <%= erb :'partials/_city_details', layout: false %>
        </div>
      </div>
    </div>
  </div>
</div>
